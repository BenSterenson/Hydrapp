<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hydrapp.Client.ManageGroupPage"
             xmlns:vm="clr-namespace:Hydrapp.Client.ViewModels;assembly=Hydrapp.Client">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Logout" Clicked="OnLogoutButtonClicked" />
  </ContentPage.ToolbarItems>

  <ContentPage.BindingContext>
    <vm:ManageGroupPageViewModel />
  </ContentPage.BindingContext>
    
  <StackLayout>
    
    <Label Text="{Binding GroupName}"
           Font="Large"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>

    <Label Text="{Binding NumOfParticipants}"
           Font="Small"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

    <StackLayout Padding="0,20,0,0">
      <ListView x:Name="listView" HasUnevenRows="true">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Padding="15,5,5,5" Orientation="Horizontal">
                <Label Text="Monkey" FontAttributes="Bold" VerticalOptions="Center" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>

  </StackLayout>
  
</ContentPage>